@{
}
@using Dominio
@model List<Resena>


@if (Model != null && Model.Count > 0)
{
    foreach (Resena resena in Model)
    {
        <div class="alert alert-success" role="alert">
            <h4 class="alert-heading">@resena.Titulo</h4>
            <hr>
            <p>@resena.Partido.SeleccionLocal.Pais.Nombre</p>
            <p>@resena.Partido.SeleccionVisitante.Pais.Nombre</p>
            <p>@resena.Partido.FaseOEtapa()</p>
            <hr>
            <p>@resena.Contenido</p>
        </div>


    }
}
else
{
    <div class="alert alert-danger" role="alert">
        No hay partidos para mostrar
    </div>

}
